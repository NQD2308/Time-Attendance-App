<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/changepassword_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="80dp">

        <TextView
            android:id="@+id/forgot_txt_titleforgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/change_pasword"
            android:textColor="#6c63ff"
            android:textSize="30sp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_lock2"
            android:layout_gravity="center"
            app:tint="#6c63ff"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/changepassword_title"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="399dp">

        <EditText
            android:id="@+id/changepassword_edittxt_lastpassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_background_signup"
            android:drawableLeft="@drawable/ic_key"
            android:drawablePadding="15dp"
            android:drawableTint="#6c63ff"
            android:ems="10"
            android:hint="Last password"
            android:inputType="textPersonName"
            android:paddingStart="20dp"
            android:paddingLeft="20dp" />

        <EditText
            android:id="@+id/changepassword_edittxt_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_background_signup"
            android:drawableLeft="@drawable/ic_lock"
            android:drawableRight="@drawable/ic_light_off"
            android:drawablePadding="15dp"
            android:drawableTint="#6c63ff"
            android:ems="10"
            android:hint="@string/login_password"
            android:inputType="textPassword"
            android:visibility="visible"
            android:paddingStart="20dp"
            android:paddingRight="16dp" />

        <EditText
            android:id="@+id/changepassword_edittxt_confirmpass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edittext_background_signup"
            android:drawableLeft="@drawable/ic_changelock"
            android:drawablePadding="15dp"
            android:drawableTint="#6c63ff"
            android:ems="10"
            android:hint="@string/Confirmpassword"
            android:inputType="textPassword"
            android:visibility="visible"
            android:paddingStart="20dp"
            android:paddingRight="16dp"
            android:paddingLeft="20dp"/>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp">

            <TextView
                android:id="@+id/changepassword_txt_nhappass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/changepassword_btn_resetnewpass"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/cusom_background_btn_intro"
            android:backgroundTint="@drawable/cusom_background_btn_intro"
            android:fontFamily="monospace"
            android:text="Reset Password"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:backgroundTint="#6c63ff"/>

    </LinearLayout>

</RelativeLayout>