<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_background_login">

    <LinearLayout
        android:id="@+id/wel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/txt_titlewelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome"
            android:textColor="#FFFF"
            android:textSize="55sp"
            android:layout_gravity="center" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="237dp"
            android:layout_height="379dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/backgroung_welcome"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imageView4"
        android:layout_below="@id/wel_title">

        <Button
            android:id="@+id/welcome_btn_login"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/cusom_background_btn_intro"
            android:backgroundTint="@drawable/cusom_background_btn_intro"
            android:fontFamily="monospace"
            android:text="@string/wel_login"
            android:textColor="#6200EE"
            android:textSize="24sp"
            app:backgroundTint="#FFFFFF" />

        <Button
            android:id="@+id/welcome_btn_signUp"
            style="@android:style/Widget.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/cusom_background_btn_intro2"
            android:fontFamily="monospace"
            android:text="@string/wel_signup"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:backgroundTint="#FFFFFF" />

    </LinearLayout>

</RelativeLayout>